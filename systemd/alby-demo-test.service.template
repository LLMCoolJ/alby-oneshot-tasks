[Unit]
Description=Alby Demo Server (Test)
After=network.target

[Service]
Type=simple
User={{USER}}
WorkingDirectory={{PROJECT_ROOT}}
Environment="NODE_ENV=test"
Environment="NVM_DIR={{NVM_DIR}}"
ExecStart=/bin/bash -c 'source {{NVM_DIR}}/nvm.sh && npm run test:server'
Restart=on-failure
RestartSec=5s
KillMode=control-group
KillSignal=SIGTERM
TimeoutStopSec=30s
StandardOutput=append:{{PROJECT_ROOT}}/logs/test-stdout.log
StandardError=append:{{PROJECT_ROOT}}/logs/test-stderr.log

[Install]
WantedBy=default.target
